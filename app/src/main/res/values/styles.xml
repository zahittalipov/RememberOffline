<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryLogin</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLogin</item>
        <item name="colorAccent">@color/colorAccentLogin</item>
        <item name="android:colorBackground">@color/background_material_lightLogin</item>
    </style>
    <style name="AppThemeLogin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ButtonSignIn" parent="TextAppearance.AppCompat.Widget.Button.Inverse">
        <item name="android:background">#232322</item>
    </style>

    <style name="Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_backround</item>
    </style>
    <style name="Title">
        <item name="android:shadowColor">#640CAB</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">53dp</item>
    </style>
    <style name="Field">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/backround_field_login</item>
    </style>
    <style name="MainMenu">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
